<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="244dp"
    android:layout_height="339dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:elevation="12dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/cardImageDescription"
                android:scaleType="centerCrop"
                android:src="@drawable/example" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:paddingTop="20dp"
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/cardImage"/>

        <TextView
            android:id="@+id/eventPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventName"
            android:layout_marginTop="8dp"
            android:text="Event Place"
            android:textSize="14sp" />

        <Button
            android:id="@+id/cardGoingButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/colorPassive"
            android:text="Going"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/cardImage"
            android:layout_alignParentEnd="true"
            android:layout_margin="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/colorActive"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <Button
            android:id="@+id/cardShowMoreButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/colorPassive"
            android:text="More"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>